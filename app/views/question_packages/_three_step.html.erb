<!-- 第一步 -->
<div class="book_box_con first_step">
  <div class="progressBar clearAfter">
    <ul>
      <li class="hover">1</li>
      <li>2</li>
      <li>3</li>
      <li>4</li>
    </ul>
  </div>
  <div class="addwork_btn">
    <a href="javascript:void(0)" class="addwork_orange_a"><span class="write_a">听写</span></a>
    <a href="javascript:void(0)" class="addwork_green_a"><span class="read_a">朗读</span></a>
  </div>
</div>

<!-- 第二步 -->
<div class="book_box_con second_step" style="display:none">
  <div class="progressBar clearAfter">
    <ul>
      <li>1</li>
      <li class="hover">2</li>
      <li>3</li>
      <li>4</li>
    </ul>
  </div>
  <div class="addwork_btn">
    <a href="javascript:void(0)" class="addwork_orange_a"><span class="build_a">新建</span></a>
    <a href="javascript:void(0)" class="addwork_green_a"><span class="quote_a">引用</span></a>
  </div>
</div>

<!-- 第三步 -->
<div class="book_box_con third_step"  style="display:none">
  <div class="progressBar clearAfter">
    <ul>
      <li>1</li>
      <li>2</li>
      <li class="hover">3</li>
      <li>4</li>
    </ul>
  </div>
  <div class="book_box_area">
    <div class="book_box_table">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <thead>
          <tr>
            <th>单元</th>
            <th>课</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <select class="cell_ids">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
            </td>
            <td>
              <select class="episode_ids">
                <option value="1">1</option>
                <option value="1">2</option>
                <option value="1">3</option>
                <option value="1">4</option>
              </select>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="remark_btn">
    <button class="green_btn" onclick="GoForthStep('<%= @question_pack_id || "" %>')">下一步</button>
  </div>
</div>

<script>
      $(".book_box_con").on('click', ".addwork_btn a", function(){
        $(this).addClass("selected");
        $(this).parents(".book_box_con").hide().end();
        $(this).parents(".book_box_con").next().show();

    });
</script>