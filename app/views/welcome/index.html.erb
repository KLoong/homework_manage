<div class="wrap">
  <div class="login_bg">
    <%= form_tag({:controller => :teachers, :action => :login}, :remote => true) do %>
    <div class="login_box">
      <ul>
        <li class="name"><input id="email" name="email" type="text" value="邮箱"></li>
        <li class="password"><input id="password" name="password" type="password" value="密码"></li>
        <li class="login_btn"><button type="button" onclick="check_value();">登录</button><a href="javascript:void(0);" class="goRegister_a">注册</a></li>
        <button id="login_submit_button" style="display: none;" type="submit">提交</button>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="register">
    <div class="register_box">
      <ul>
        <li class="avater">
          <div class="avater_default"><img src="/assets/default_avater.jpg"></div>
          <a href="javascript:void(0);" class="avater_a">
            <span>点击添加头像</span>
            <input name="" multiple="" type="file">
          </a>
        </li>
        <li><input name="" type="text" value="姓名" class="otherInput"></li>
        <li><input name="" type="text" value="邮箱" class="otherInput"></li>
        <li><input name="" type="text" value="密码" class="otherInput"></li>
        <li><input name="" type="text" value="确认密码" class="otherInput"></li>
        <li class="register_btn"><button>确认</button><a href="javascript:void(0);" class="goLogin_a">返回登录</a></li>
      </ul>
    </div>
  </div>
</div>